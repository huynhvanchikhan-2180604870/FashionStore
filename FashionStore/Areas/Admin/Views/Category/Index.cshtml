@model IEnumerable<FashionStore.Models.Category>
@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container shadow" style="border-radius:15px">
    <div class="text-end">
        <a class="btn btn-success" asp-action="Add">Add</a>
    </div>
    <table class="table mt-5 mb-3">
        <thead>
            <th>#</th>
            <th>Name</th>
            <th>Product Count</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>@category.Products.Count</td>
                    <td>
                        <form method="post">
                            <input type="type" name="name" value="@category.CategoryID" asp-for="@category.CategoryID" hidden />
                            <button class="btn btn-outline-danger" asp-action="Delete" asp-controller="Category" asp-area="admin">Delete</button>
                            
                        </form>
                        <a class="btn btn-outline-secondary ms-3" asp-action="Update" asp-controller="Category" asp-area="admin" asp-route-id="@category.CategoryID">Update</a>
                    </td>
                </tr>
            }
        </tbody>
        <div class="pt-2"></div>
    </table>
</div>


<script>
    function openForm() {
        document.getElementById("myForm").style.display = "block";
    }

    function closeForm() {
        document.getElementById("myForm").style.display = "none";
    }
</script>



