@model IEnumerable<FashionStore.Models.ProductDetail>
@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <a class="btn btn-outline-success" asp-action="Index" asp-controller="Products">Trở về trang thêm sản phẩm</a>
    
</div>

<table class="table">
    <thead>
        <th>#</th>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Size Tag</th>
        <th></th>
    </thead>
    <tbody>
        @foreach(var details in Model)
        {
            <tr>
                <td>@details.ProductDetailID</td>
                <td>@details.Product.ProductID</td>
                <td>@details.Product.ProductName</td>
                <td>@details.Quantity</td>
                <td>@details.Size.SizeName</td>
                <td>
                    <a asp-action="Add" asp-controller="ProductDetail" asp-route-id="@details.Product.ProductID" class="btn btn-outline-success">Add Detail</a>
                    <a class="btn btn-outline-success" asp-action="Add" asp-controller="ProductImage" asp-route-id="@details.ProductID">Thêm hình ảnh sản phẩm</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

