@model IEnumerable<FashionStore.Models.WishList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="shopping__cart__table">
    <table>
        <thead>
            <tr>
                <th>Product</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wishlist in Model)
            {
                <tr>
                    <td class="product__cart__item">
                        <div class="product__cart__item__pic">
                            @if (wishlist.Product.Images.Any(x => x.IsCover))
                            {
                                var coverImage = wishlist.Product.Images.First(x => x.IsCover);
                                <img src="@coverImage.UrlImage" alt="@wishlist.Product.ProductName" style="width:90px; height:90px">
                            }
                        </div>
                        <div class="product__cart__item__text">
                            <h6>@wishlist.Product.ProductName</h6>
                            <h5>@wishlist.Product.Price</h5>
                        </div>
                    </td>
                    
                    <td class="cart__close">
                        <a asp-action="RemoveItem" asp-route-id="@wishlist.ProductID">
                            <i class="fa fa-close"></i>
                        </a>
                        <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@wishlist.ProductID">
                            <i class="fa fa-cart-plus"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
