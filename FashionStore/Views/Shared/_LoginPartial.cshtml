@using Microsoft.AspNetCore.Identity
@using FashionStore.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole(SD.Role_Admin))
    {
        <div>
            <a id="manage" class="nav-link dropdown-item text-black" asp-area="Admin" asp-action="Index" asp-controller="Home" title="Manage">Switch Admin Page</a>

        </div>

    }
    <div>
        <a id="manage" class="nav-link dropdown-item text-black" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

    </div>


    <div>
        <form id="logoutForm" class="form-inline " asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0 ps-3">Logout</button>
        </form>
    </div>


}
else
{

    <div>
        <a class="nav-link dropdown-item text-black" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>

    </div>
    <div>
        <a class="nav-link dropdown-item text-black" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>

    </div>

}
